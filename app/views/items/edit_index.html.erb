<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>name</th>
      <th>email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.image.url(:medium) %></td>
        <td><%= item.description %></td>
        <td><%= item.user.name if item.user %></td>
        <td><%= item.user.email if item.user %></td>
        <td><%= link_to 'Show', item_path(item) %></td>
        <% if item.user == current_user %>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to "Add an Item", new_item_path %> |
  <%= link_to 'New Item', new_item_path %> |
<% end %>
<%= link_to 'Back', items_path %>
